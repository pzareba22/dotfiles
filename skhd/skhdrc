cmd + ctrl - return : open -na /Applications/Alacritty.app

# YABAI config
cmd + ctrl - right : yabai -m window --space next && yabai -m space --focus next
cmd + ctrl - left : yabai -m window --space prev && yabai -m space --focus prev

# Select spaces
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Select displays
alt - k : yabai -m display --focus next
alt - j : yabai -m display --focus prev

# Toggle layouts
alt + ctrl - d : yabai -m space --layout bsp
alt + ctrl - e : yabai -m space --layout float

# Center a window
alt + ctrl - c : yabai -m window --grid 5:5:1:1:3:3

# cmd + ctrl - space : yabai -m window recent --toggle zoom-fullscreen

# Select windows
alt + ctrl - l : yabai -m window --focus east
alt + ctrl - h : yabai -m window --focus west
alt + ctrl - k : yabai -m window --focus north
alt + ctrl - j : yabai -m window --focus south

# Swap windows
# alt + cmd - l : yabai -m window --swap east
# alt + cmd - h : yabai -m window --swap west
# alt + cmd - k : yabai -m window --swap north
# alt + cmd - j : yabai -m window --swap south

# Move windows to spaces
alt + ctrl - 1: yabai -m window --space 1
alt + ctrl - 2: yabai -m window --space 2
alt + ctrl - 3: yabai -m window --space 3
alt + ctrl - 4: yabai -m window --space 4
alt + ctrl - 5: yabai -m window --space 5
alt + ctrl - 6: yabai -m window --space 6
alt + ctrl - 7: yabai -m window --space 7
alt + ctrl - 8: yabai -m window --space 8
alt + ctrl - 9: yabai -m window --space 9
alt + ctrl - 0: yabai -m window --space 0

# Move windows to displays
alt + ctrl - k : yabai -m window --display next
alt + ctrl - j : yabai -m window --display prev

# Toggle floating
ctrl + cmd - space: yabai -m window --toggle float

